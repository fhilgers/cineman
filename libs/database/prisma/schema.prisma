generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id         String   @id @default(uuid()) @db.Uuid
  price      Int
  ownerId    String   @db.Uuid
  owner      Customer @relation(fields: [ownerId], references: [id])
  seatId     String   @db.Uuid
  seat       Seat     @relation(fields: [seatId], references: [id])
  showId     String   @db.Uuid
  show       Show     @relation(fields: [showId], references: [id])

  @@unique([seatId, showId])
}

model Customer {
  id      String   @id @default(uuid()) @db.Uuid
  name    String
  address String
  Rating  Rating[]
  tickets Ticket[]
}

model Movie {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String
  duration    DateTime
  age         Int
  rating      Rating[]
  show        Show[]
}

model Rating {
  id         String   @id @default(uuid()) @db.Uuid
  stars      Float
  review     String
  customerId String   @db.Uuid
  customer   Customer @relation(fields: [customerId], references: [id])
  movieId    String   @db.Uuid
  movie      Movie    @relation(fields: [movieId], references: [id])

  @@unique([customerId, movieId])
}

model Show {
  id        String   @id @default(uuid()) @db.Uuid
  theaterId String   @db.Uuid
  movieId   String   @db.Uuid
  start     DateTime
  end       DateTime
  movie     Movie    @relation(fields: [movieId], references: [id])
  theater   Theater  @relation(fields: [theaterId], references: [id])
  tickets   Ticket[]

  // CREATE EXTENSION btree_gist;
  // ALTER TABLE "Show" ADD EXCLUDE USING GIST ("theaterId" WITH =, tsrange("start", "end", '[)') WITH &&);
}

model Theater {
  id       String           @id @default(uuid()) @db.Uuid
  name     String  @unique
  seats    Seat[]
  shows    Show[]
  features TheaterFeature[] @relation("TheaterToTheaterFeature")
}

model Seat {
  id        String @id @default(uuid()) @db.Uuid
  number    Int
  row       Int
  type      SeatType @default(NORMAL)
  theaterId String   @db.Uuid
  theater   Theater  @relation(fields: [theaterId], references: [id], onDelete: Cascade)
  tickets   Ticket[]

  @@unique([number, theaterId])
}

model TheaterFeature {
  id       String @id @default(uuid()) @db.Uuid
  name     String    @unique
  theaters Theater[] @relation("TheaterToTheaterFeature")
}

enum SeatType {
  NORMAL
  DELUXE
  REMOVABLE
}
